{
  "name": "tank-game",
  "version": "1.0.0",
  "description": "Tank game using Pixi.js",
  "type": "module",
  "scripts": {
    "build": "pnpm lint && webpack --mode=production --config webpack.config.mjs && pnpm images",
    "docs": "typedoc --options typedoc.json",
    "start": "pnpm docs && webpack-dev-server --mode development && pnpm open http://localhost:8080",
    "lint": "eslint -f unix \"src/**/*.{ts,tsx}\"",
    "compress": "pngquant --quality 60-80 --force dist/atlas.png --output dist/atlas.png",
    "images": "TexturePacker --format pixijs4 --sheet dist/atlas.png --data dist/atlas.json src/Resources/Images && pnpm compress",
    "create-level": "node ./src/Resources/create-level.cjs"
  },
  "dependencies": {
    "@pixi/particle-emitter": "^5.0.8",
    "pixi.js": "^7.3.2",
    "stats.js": "^0.17.0"
  },
  "repository": {
    "type": "git"
  },
  "author": "craigbeswetherick@gmail.com",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "20.8.7",
    "@types/stats.js": "^0.17.3",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "6.8.1",
    "eslint": "^8.53.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "file-loader": "^6.2.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.3",
    "pngquant-bin": "^8.0.1",
    "style-loader": "3.3.3",
    "ts-loader": "^9.5.0",
    "typedoc": "^0.25.3",
    "typescript": "^5.2.2",
    "url-loader": "4.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-glsl-loader": "1.0.1"
  }
}
